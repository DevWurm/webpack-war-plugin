{
  "name": "webpack-v5-war-plugin",
  "version": "1.0.0",
  "description": "Webpack v5 plugin for bundling build outputs into a WAR archive",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/stertheweb/webpack-war-plugin",
  "author": "stertheweb",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc -d",
    "clean": "rimraf dist",
    "test": "mocha --compilers ts:ts-node/register src/**/*.spec.ts",
    "test:coverage": "nyc npm run test",
    "test:functional:setup": "cd functional_tests && npm install && npm run setup",
    "test:functional": "cd functional_tests && npm run test",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "dependencies": {
    "archiver": "^5.3.0",
    "colors": "^1.4.0",
    "filesize": "^8.0.7",
    "http": "0.0.1-security",
    "https": "^1.0.0",
    "path": "^0.12.7",
    "typescript": "^4.6.2",
    "webpack": "^5.70.0"
  },
  "devDependencies": {
    "@types/archiver": "^5.3.1",
    "@types/chai": "^4.3.0",
    "@types/colors": "^1.2.1",
    "@types/mocha": "^2.2.48",
    "@types/node": "^7.10.14",
    "@types/sinon": "^10.0.11",
    "@types/webpack": "^5.28.0",
    "chai": "^4.3.6",
    "coveralls": "^3.1.1",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^2.4.1",
    "ts-node": "^10.7.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "peerDependencies": {
    "webpack": ">5.0.0"
  }
}
